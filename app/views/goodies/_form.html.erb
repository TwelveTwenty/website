<%= form_for(@goody) do |f| %>
	<% if @goody.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@goody.errors.count, "error") %> prohibited this goody from being saved:</h2>

			<ul>
				<% @goody.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :artwork, "artwork: 714 wide"  %>
		<br/>
		<%= f.file_field :artwork %>
	</div>

	<div><%= image_tag @goody.artwork_url(:full).to_s %></div>

	<div class="field">
		<%= f.label :artwork, "artwork: 341x200 (mobile) and 218x200 (desktop)" %>
		<br/>
		<%= f.file_field :homepage_artwork %>
	</div>

	<% if @goody.homepage_artwork_url %>
		<div><%= image_tag @goody.homepage_artwork_url(:block_thumb).to_s %></div>
		<br>
		<div style="width: 218px; height: 200px; background-image: url(<%= image_path @goody.homepage_artwork_url(:block_thumb).to_s %>); background-position: center center;"></div>
		<br><br>
	<% end %>

	<div class="field">
		<%= f.label :created_at, "created_at" %>
		<br/>
		<%= f.datetime_select :created_at %>
	</div>

	<div class="field">
		<%= f.label :draft, "draft" %>
		<br/>
		<%= f.check_box :draft %>
	</div>

	<div class="field">
		<%= f.label :title, "title" %>
		<br/>
		<%= f.text_field :title %>
	</div>

	<div class="field">
		<%= f.label :author, "author" %>
		<br/>
		<%= f.text_field :author %>
	</div>

	<div class="field">
		<%= f.label :teaser, "teaser" %>
		<br/>
		<%= f.text_area :teaser %>
	</div>

	<div class="field">
		<%= f.label :body, "body" %>
		<br/>
		<%= f.text_area :body %>
	</div>

	<hr>

	<h2>Call to action</h2>

	<div class="field">
		<%= f.label :has_call_to_action, "Show download" %>
		<br/>
		<%= f.check_box :has_call_to_action %>
	</div>

	<div class="field">
		<%= f.label :call_to_action_artwork, "Artwork (192x194)" %>
		<br/>
		<%= f.file_field :call_to_action_artwork %>
	</div>

	<div><%= image_tag @goody.call_to_action_artwork_url(:block_thumb).to_s %></div>

	<div class="field">
		<%= f.label :call_to_action_header, "Header" %>
		<br/>
		<%= f.text_field :call_to_action_header %>
	</div>

	<div class="field">
		<%= f.label :call_to_action_teaser, "Teaser" %>
		<br/>
		<%= f.text_field :call_to_action_teaser %>
	</div>

	<div class="field">
		<%= f.label :download_url, "download url" %>
		<br/>
		<%= f.text_field :download_url %>
	</div>

	<div class="field">
		<%= f.label :share_link_text, "Share button text" %>
		<br/>
		<%= f.text_field :share_link_text %>
	</div>

	<div class="field">
		<%= f.label :share_text, "share text" %>
		<br/>
		<%= f.text_field :share_text %>
	</div>

	<div class="actions">
		<%= f.submit "go" %>
	</div>

<% end %>
